{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "parserOptions": {
        "emcaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        // 0 = off, 1 = warn, 2 = error
        "prettier/prettier": ["error"]
    }
}
